              <input type="text" class="form-control" placeholder="Search..." name="search">
              {# <button class="search_button"><i class="fa fa-fw fa-search text-dark mr-2"></i></button> #}
              <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
          </form>
      </div>
      </ul>
        <div class="mx-2">
        {% if app.user %}
        <div class="list-inline-item" >
            <a class="nav-link" href="{{ path('app_order') }}">My Receipt</a>
        </div>
        <li class="list-inline-item">
          <a class="nav-link" href="{{ path('cart') }}"><i class="fa-solid fa-cart-shopping"></i></a>
        </li>
        <div class="list-inline-item">
            <a class="nav-link">Welcome {{ app.user.name }},</a>
            {# {{ app.user.userIdentifier }} #}
        </div>
        <div class="list-inline-item" >
            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
        </div>
        <div class="list-inline-item" >
            <a class="nav-link" href="{{path('app_profile')}}">My Profile</a>
        </div>
        {%  else %}
        <li class="list-inline-item" >
            <a class="nav-link"href="{{path('app_login')}}">Login</a>
          </li>
          <li class="list-inline-item">
            <a class="nav-link" href="{{path('app_register')}}">Registration</a>
          </li>
      {% endif %}

    </div>
  </div>
</nav>
